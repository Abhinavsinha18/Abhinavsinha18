
public class Main
{
	public static void main(String[] args) {
    int n = 15;
    System.out.println(small(n));
	}
	public static int small(int n){
	    int c = 0; 
	    return helper(n, c);
	}
	private static int helper(int n, int steps){
	    if(n==0){
	        return steps;
	    }
	    if(n%2==0){
	        return helper(n/2 , steps+1);
	    }
	    else{
	        return helper(n-1,steps+1);
	    }
	}
}
